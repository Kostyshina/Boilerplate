<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FloatingBottomSheet">
        <attr name="android:background" />
        <attr name="android:text" />
    </declare-styleable>
    
    <declare-styleable name="ScrollAwareBehavior">
        <attr name="behavior_collapse_threshold" format="dimension" />
        <attr name="behavior_scroll_direction_collapse" format="enum" >
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>
</resources>