<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andersenlab.boilerplate.activity.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fl_main_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlackTransparent"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_main_add_item"
            style="@style/AppTheme.ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_button_main_vertical"
            android:layout_marginBottom="@dimen/margin_button_main_vertical"
            android:layout_marginEnd="@dimen/margin_button_main_horizontal"
            android:layout_marginStart="@dimen/margin_button_main_horizontal"
            android:text="@string/main_add_item" />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>